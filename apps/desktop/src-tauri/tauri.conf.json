{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TypeVoice",
  "version": "0.1.0",
  "identifier": "com.typevoice.typevoice",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TypeVoice",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "toolchain/bin/windows-x86_64/": "toolchain/windows-x86_64/",
      "toolchain/bin/linux-x86_64/": "toolchain/linux-x86_64/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
